<Window x:Class="SubjectManagement.GUI.Dialog.ColorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SubjectManagement.GUI.Dialog"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="ColorDialog"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterOwner"
        Width="300"
        Height="390">
    <DockPanel>
        <materialDesign:ColorPicker Name="ClrPcker_ColorText"
                                    Width="300"
                                    Height="300"
                                    DockPanel.Dock="Top"></materialDesign:ColorPicker>
        <Button Style="{StaticResource MaterialDesignFlatButton}"
                Click="ButtonBase_OnClick"
                VerticalAlignment="Bottom"
                ToolTip="MaterialDesignFlatButton">
            ACCEPT
        </Button>
    </DockPanel>
</Window>
