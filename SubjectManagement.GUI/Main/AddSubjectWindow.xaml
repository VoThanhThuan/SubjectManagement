<Window x:Class="SubjectManagement.GUI.Main.AddSubjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SubjectManagement.GUI.Main"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="AddSubjectWindow" Height="550" Width="800">
    <StackPanel Margin="5">
        <TextBox x:Name="tbx_CourseCode" 
                 materialDesign:HintAssist.Hint="Mã Học Phần"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 VerticalAlignment="Center" />
        <TextBox x:Name="tbx_Name" materialDesign:HintAssist.Hint="Tên Học Phần"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 VerticalAlignment="Center" />
        <TextBox x:Name="tbx_Credit"
                 materialDesign:HintAssist.Hint="Số Tín Chỉ"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 VerticalAlignment="Center" />
        <TextBox x:Name="tbx_NumberOfTheory"
                 materialDesign:HintAssist.Hint="Số Tiết Lý Thuyết"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 VerticalAlignment="Center" />
        <TextBox x:Name="tbx_NumberOfPractice"
                 materialDesign:HintAssist.Hint="Số Tiết Thực Hành"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 VerticalAlignment="Center" />
        <TextBox x:Name="tbx_Prerequisite"
                 materialDesign:HintAssist.Hint="Tiên Quyết"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 VerticalAlignment="Center" />
        <TextBox x:Name="tbx_LearnFirst"
                 materialDesign:HintAssist.Hint="Học Trước"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 VerticalAlignment="Center" />
        <TextBox x:Name="tbx_Parallel"
                 materialDesign:HintAssist.Hint="Song Hành"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 VerticalAlignment="Center" />
        <TextBox x:Name="tbx_Details"
                 materialDesign:HintAssist.Hint="Mô Tả Môn Học"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 VerticalAlignment="Center" />
        <StackPanel Orientation="Horizontal">
            <ToggleButton x:Name="chk_TypeCourse" Style="{StaticResource MaterialDesignSwitchToggleButton}"
                          ToolTip="Default ToggleButton Style" />
            <TextBlock Foreground="#7F000000">Môn Tự Chọn</TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <ToggleButton x:Name="chk_IsOffical" Style="{StaticResource MaterialDesignSwitchToggleButton}"
                          ToolTip="Default ToggleButton Style" />
            <TextBlock Foreground="#7F000000">Môn Chính Thức</TextBlock>
        </StackPanel>
        <StackPanel>
            <ComboBox x:Name="cbb_CoursesGroup"
                      materialDesign:HintAssist.Hint="Nhóm Học Phần">
            </ComboBox>
            <materialDesign:PopupBox Grid.Column="1"
                                     Style="{StaticResource MaterialDesignMultiFloatingActionPopupBox}"
                                     PlacementMode="BottomAndAlignCentres"
                                     ToolTip="Tùy chỉnh danh mục sản phẩm"
                                     Height="40"
                                     Width="40"
                                     Margin="10,0,0,0">
                <materialDesign:PopupBox.ToggleCheckedContent>
                    <materialDesign:PackIcon Kind="Pencil"
                                             Width="24"
                                             Height="24" />
                </materialDesign:PopupBox.ToggleCheckedContent>
                <StackPanel>
                    <Button x:Name="btn_AddCategory"
                            Grid.Column="1"
                            ToolTip="Thêm danh mục sản phẩm"
                            Click="Btn_AddCategory_OnClick"
                            Margin="10,0,0,0"
                            Background="#FF00B9FF"
                            Foreground="White">
                        <materialDesign:PackIcon Kind="PlusCircle" />
                    </Button>

                    <Button x:Name="btn_EditCategory"
                            Grid.Column="1"
                            ToolTip="Chỉnh sửa danh mục sản phẩm"
                            Click="Btn_EditCategory_OnClick"
                            Margin="10,0,0,0"
                            Background="Violet"
                            Foreground="White">
                        <materialDesign:PackIcon Kind="Pencil" />
                    </Button>

                    <Button x:Name="btn_RemoveCategory"
                            Grid.Column="1"
                            ToolTip="Xóa danh mục sản phẩm"
                            Click="Btn_RemoveCategory_OnClick"
                            Margin="10,0,0,0"
                            Background="Red"
                            Foreground="White">
                        <materialDesign:PackIcon Kind="DeleteForever" />
                    </Button>
                </StackPanel>
            </materialDesign:PopupBox>
        </StackPanel>
        <Grid Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:Name="btn_AddProduct"
                    Grid.Column="0"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Click="btn_AddProduct_Click"
                    Content="Thêm" />
            <Button x:Name="btn_CLose"
                    Grid.Column="1"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Click="Btn_CLose_OnClick">Đóng</Button>
        </Grid>

    </StackPanel>
</Window>
