<UserControl x:Class="SubjectManagement.GUI.Main.Children.Common.NewTabUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SubjectManagement.GUI.Main.Children.Common"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid x:Name="MainBody">
        <Grid x:Name="RenderBody">
            <TextBlock x:Name="tbl_Class" Text="xxx"
                       Foreground="#FF3F51B5"
                       FontSize="20"></TextBlock>
            <Grid Margin="0 25 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Button x:Name="btn_ViewList"
                                ToolTip="Icon"
                                Width="160"
                                Height="160"
                                Click="Btn_ViewList_OnClick">
                            <materialDesign:PackIcon Kind="ViewSplitHorizontal"
                                                     Width="120"
                                                     Height="120" />
                        </Button>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Button x:Name="btn_AlternativeSubject"
                                ToolTip="Icon"
                                Width="160"
                                Height="160"
                                Click="Btn_AlternativeSubject_OnClick">
                            <materialDesign:PackIcon Kind="CurrentAc"
                                                     Width="120"
                                                     Height="120" />
                        </Button>
                    </Grid>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid>
                        <Button x:Name="btn_AddSemester"
                                ToolTip="Icon"
                                Width="160"
                                Height="160"
                                Grid.Column="1"
                                Click="Btn_AddSemester_OnClick">
                            <materialDesign:PackIcon Kind="ClipboardList"
                                                     Width="120"
                                                     Height="120" />
                        </Button>
                    </Grid>
                </Grid>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid>
                        <Button x:Name="btn_Compare"
                                ToolTip="Icon"
                                Width="160"
                                Height="160"
                                Grid.Column="2"
                                Click="Btn_Compare_OnClick">
                            <materialDesign:PackIcon Kind="Compare"
                                                     Width="120"
                                                     Height="120" />
                        </Button>
                    </Grid>
                </Grid>

            </Grid>
        </Grid>

        <Grid x:Name="g_loading"
              Background="#66000000"
              Visibility="Hidden">
            <ProgressBar IsIndeterminate="True"
                         VerticalAlignment="Top"
                         Foreground="#FFA200FF"
                         Background="White" />
            <TextBox HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Foreground="White"
                     FontSize="32">waiting for love...</TextBox>
        </Grid>

    </Grid>

</UserControl>
